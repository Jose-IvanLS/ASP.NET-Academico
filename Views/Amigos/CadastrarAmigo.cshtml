
@{
    ViewData["Title"] = "Cadastro de amigos";
}

<h1>Tela de cadastro de amigos</h1>
<form action="/amigos/cadastrandoamigo" method="post">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" name="nome" required/>
    <label for="sobrenome">Sobrenome:</label>
    <input type="text" id="sobrenome" name="sobrenome" required/>
    <label for="aniversario">Data de aniversário:</label>
    <input type="date" id="aniversario" name="aniversario" required/>
    <input type="submit" value="Cadastrar"/>
</form>

